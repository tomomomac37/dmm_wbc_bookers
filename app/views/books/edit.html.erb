<div class="edit">
	<h1 class="edit_heaging">Editing Book</h1>
	<% if @book.errors.any? %>
  <div class="alert alert-warning">
  	<p>error</p>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
	<% end %>

	<!-- フォーム -->
	<%=form_for(@book) do |f| %>

	  <p>
	  	<%= f.label :title, "Title" %> <br>
	    <%= f.text_field :title, class: "book_title" %>
	  </p>
	  <p>
	  	<%= f.label :body, "Body" %> <br>
	    <%= f.text_area :body, class: "book_body" %>
	  </p>

	  <p> <%= f.submit "Update Book" %> </p>
	<% end %>

	<!-- 他のページへのボタン -->
	<%= link_to "Show",book_path(@book.id) ,class: "show_#{@book.id}"%>
	<span> | </span>
	<%= link_to "Back",books_path ,class: "back" %>
</div>
